package microstar.customer;

import javax.swing.JPanel;
import java.awt.Color;
import javax.swing.JButton;
import javax.swing.JLabel;

import java.awt.Font;

public class LiveVideoChat extends JPanel {

	public VideoChat() {
		setBackground(Color.DARK_GRAY);
		setLayout(null);
		
		JPanel panel = new JPanel();
		panel.setBackground(Color.GRAY);
		panel.setBounds(76, 83, 550, 350);
		add(panel);
		
		JPanel panel1 = new JPanel();
		panel1.setBackground(Color.GRAY);
		panel1.setBounds(726, 163, 350, 204);
		add(panel1);
		
		JButton btnstart = new JButton("Start/Stop");
		btnstart.setFont(new Font("Calibri", Font.PLAIN, 30));
		btnstart.setVerticalAlignment(JLabel.CENTER);
	    btnstart.setHorizontalAlignment(JLabel.CENTER);
		btnstart.setForeground(new Color(0x333333));
	    btnstart.setBackground(new Color(0x6666ff));
	    btnstart.setBorder(null);
		btnstart.setBounds(941, 521, 171, 47);
		add(btnstart);

	}
}
